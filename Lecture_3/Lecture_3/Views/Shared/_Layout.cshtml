<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-yellow">
        <div class="container">
            @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav px-3">
                    <li>@Html.ActionLink("Home", "Ingredients", "Ingredients", new { area = "" }, new { @class = "nav-link fs-4" })</li>
                    <li>@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link fs-4" })</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link fs-4" })</li>
                </ul>
                <ul class="navbar-nav">
                    <li>


                        @{
                            var loggedInUser = (Lecture_3.Models.User)Session["loggedInUser"];
                        }
                        <div class="container">
                            <div class="row">
                                <div class="col-md-6 m-auto">
                                    
                                    <a href="@Url.Action("Index", "Profile")">
                                        <svg width="56" height="56" viewBox="0 0 56 56" fill="none" xmlns="http://www.w3.org/2000/svg">
                                            <path d="M10.92 47.6C12.705 44.6701 15.2136 42.2486 18.2048 40.5683C21.196 38.888 24.5692 38.0055 28 38.0055C31.4308 38.0055 34.804 38.888 37.7952 40.5683C40.7864 42.2486 43.295 44.6701 45.08 47.6M28 32C30.6522 32 33.1957 30.9464 35.0711 29.0711C36.9464 27.1957 38 24.6522 38 22C38 19.3478 36.9464 16.8043 35.0711 14.9289C33.1957 13.0536 30.6522 12 28 12C25.3478 12 22.8043 13.0536 20.9289 14.9289C19.0536 16.8043 18 19.3478 18 22C18 24.6522 19.0536 27.1957 20.9289 29.0711C22.8043 30.9464 25.3478 32 28 32Z" stroke="black" stroke-width="1.71429" stroke-linecap="round" stroke-linejoin="round" />
                                            <path d="M28 54C34.8956 54 41.5088 51.2607 46.3848 46.3848C51.2607 41.5088 54 34.8956 54 28C54 21.1044 51.2607 14.4912 46.3848 9.61522C41.5088 4.73928 34.8956 2 28 2C21.1044 2 14.4912 4.73928 9.61522 9.61522C4.73928 14.4912 2 21.1044 2 28C2 34.8956 4.73928 41.5088 9.61522 46.3848C14.4912 51.2607 21.1044 54 28 54Z" stroke="black" stroke-width="1.71429" stroke-linecap="round" stroke-linejoin="round" />
                                        </svg>
                                    </a>

                                </div>
                                <div class="col-md-6">
                                    @if (loggedInUser != null)
                                    {
                                        <span>
                                            <a class="nav-link" href="@Url.Action("Index", "Profile")">@loggedInUser.Name</a>
                                        </span>
                                        <br />
                                        <a class="nav-link" href="@Url.Action("Logout", "Profile")">Log Out</a>
                                    }
                                    else
                                    {
                                        <a class="nav-link" href="@Url.Action("Login", "Profile")">LogIn</a>
                                        <span>&emsp;OR</span>
                                        <a class="nav-link" href="@Url.Action("Register", "Profile")">Register</a>
                                    }
                                </div>
                            </div>
                        </div>

                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="text-center bg-yellow py-4">
            <div>
                <h2>Website Logo here</h2>
                <h3>Sub Headline Here</h3>
            </div>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark">
                    <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                        <ul></ul>
                        <ul class="navbar-nav px-3">
                            <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                            <li class ="nav-link">Add Menu</li>
                            <li class ="nav-link">Search Menu</li>
                            <li class ="nav-link">Your Recipies</li>
                        </ul>
                        <ul class="navbar-nav">
                            <li class="nav-link">Social Media Here</li>
                        </ul>
                    </div>
            </nav>

        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>